<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<gdrive_git>
	<gdrive><!-- google document on google drive configurations. -->
		<folder>
			<id>__YOUR_GOOGLE_DRIVE_FOLDER_ID_TO_GIT__</id>
		</folder>

		<gdoc>
			<converts><!-- google documents convert configurations. -->
				<convert><!-- google document to open office doc. -->
					<from>application/vnd.google-apps.document</from>
					<to>application/vnd.oasis.opendocument.text</to>
					<extension>odt</extension>
				</convert>
				<convert><!-- google spread sheet to open office spread sheet. -->
					<from>application/vnd.google-apps.spreadsheet</from>
					<to>application/vnd.oasis.opendocument.spreadsheet</to>
					<extension>ods</extension>
				</convert>
				<convert><!-- google slide to open office presentation. -->
					<from>application/vnd.google-apps.presentation</from>
					<to>application/vnd.oasis.opendocument.presentation</to>
					<extension>odp</extension>
				</convert>
				<convert><!-- google draw to SVG. -->
					<from>application/vnd.google-apps.drawing</from>
					<to>image/svg+xml</to>
					<extension>svg</extension>
				</convert>
				<convert><!-- google script to javascript json. -->
					<from>application/vnd.google-apps.script</from>
					<to>application/vnd.google-apps.script+json</to>
					<extension>json</extension>
				</convert>
				<convert><!-- google map to google earth KML. -->
					<from>application/vnd.google-apps.map</from>
					<to>application/vnd.google-earth.kml+xml</to>
					<extension>kml</extension>
				</convert>
			</converts>
		</gdoc>
	</gdrive>

	<git><!-- git configurations. -->
		<repository>__YOUR_LOCAL_GIT_REPOSITORY_PATH__</repository><!-- git local repository. -->
		<command></command><!-- default is 'git', but you should better to set fullpath to your git command. -->
		<comment></comment><!-- format template for datetime.datetime.strftime() default is 'Committed at %F %T.'. -->
	</git>
</gdrive_git>
